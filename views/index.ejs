<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./components/head.ejs") -%>
  </head>
  <body>
    <header>
      <a href="/">
        <h1>CMDA Smoelenboek</h1>
        <h2>Ontmoet alle docenten</h2>
      </a>
      <form method="get" action="/search" data-search-form>
        <input
          type="search"
          name="q"
          placeholder="Zoek een docent"
          data-search-input
        />
        <button type="submit" aria-label="zoeken">Zoeken</button>
      </form>
    </header>
    <main>
      <section id="aanwezig">
        <h2>Aanwezig</h2>
        <section class="docenten">
          <% today.forEach(teacher => { %>
          <a href="/detail/<%= teacher.docent.id %>" class="teacherLink">
            <div class="images">
              <% if(teacher.docent.data.frame !== null){ %>
              <img
                class="frame"
                src="/images/frames/<%- teacher.docent.data.frame%>.png"
              />
              <% } %>
              <img class="teacher" src="<%- teacher.docent.data.foto.url %>" />
            </div>
            <h3><%- ctx.prismicH.asText(teacher.docent.data.naam) %></h3>
          </a>
          <% }) %>
        </section>
      </section>
      <section id="afwezig">
        <h2>Afwezig</h2>
        <section class="docenten">
          <% not_today.forEach(teacher => { %>
          <a href="/detail/<%= teacher.docent.id %>" class="teacherLink">
            <div class="images">
              <% if(teacher.docent.data.frame !== null){ %>
              <img
                class="frame"
                src="/images/frames/<%- teacher.docent.data.frame%>.png"
              />
              <% } %>
              <img class="teacher" src="<%- teacher.docent.data.foto.url %>" />
            </div>
            <h3><%- ctx.prismicH.asText(teacher.docent.data.naam) %></h3>
          </a>
          <% }) %>
        </section>
      </section>
    </main>
    <footer></footer>
  </body>
</html>
