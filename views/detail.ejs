<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./components/head.ejs") -%>
  </head>
  <body>
    <header>
      <a href="/">
        <h1>CMDA Smoelenboek</h1>
        <h2>Ontmoet alle docenten</h2>
      </a>
      <%- include("./components/search.ejs") -%> <%-
      include("./components/filter.ejs") -%>
    </header>
    <main>
      <section class="teacherInfo">
        <section class="teacherDetail">
          <h2 class="teacherName"><%- document.data.naam[0].text %></h2>
          <img class="teacherImage" src="<%- document.data.foto.url %>" />
          <% if(document.data.vakken.length > 0){ %>
          <h3>Vakken</h3>
          <p><%- document.data.vakken[0].text -%><% } %></p>

          <% if(document.data.email.length > 0){ %>
          <h3>Email</h3>
          <p><%- document.data.email[0].text -%><% } %></p>

          <% if(document.data.beschrijving.length > 0){ %>
          <h3>Beschrijving</h3>
          <p><%- document.data.beschrijving[0].text -%><% } %></p>

          <% if(document.data.hobbies.length > 0){ %>
          <h3>Hobbies</h3>
          <p><%- document.data.hobbies[0].text -%><% } %></p>

          <% if(document.data.dagen_aanwezig.length > 0){ %>
          <h3>Aanwezig</h3>
          <p><%- document.data.dagen_aanwezig[0].text -%><% } %></p>

          <% if(document.data.leuk_feitje.length > 0){ %>
          <h3>Feitje</h3>
          <p><%- document.data.leuk_feitje[0].text -%><% } %></p>
        </section>
        <section class="relatedTeachers">
          <h2 class="relatedTeachersTitle">
            <%- document.data.specaliteit %> docenten
          </h2>
          <% teachers.forEach(teacher => { %>

          <a href="/detail/<%= teacher.docent.id %>" class="teacherLink">
            <div class="images">
              <% if(teacher.docent.data.frame !== null){ %>
              <img
                class="frame"
                src="/images/frames/<%- teacher.docent.data.frame%>.png"
              />
              <% } %>
              <img class="teacher" src="<%- teacher.docent.data.foto.url %>" />
            </div>
            <h3><%- ctx.prismicH.asText(teacher.docent.data.naam) %></h3>
          </a>
          <% }) %>
        </section>
      </section>
    </main>
    <footer></footer>
  </body>
</html>
