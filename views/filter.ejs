<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./components/head.ejs") -%>
  </head>
  <body>
    <header>
      <a href="/">
        <h1>CMDA Smoelenboek</h1>
        <h2>Ontmoet alle docenten</h2>
      </a>
      <%- include("./components/search.ejs") -%>
      <div class="filter">
        <%- include("./components/filter.ejs") -%>
        <a href="/" class="closeButton"> x</a>
      </div>
    </header>
    <main>
      <h2><%-title-%> docenten</h2>
      <section class="docenten">
        <% docenten.forEach(teacher => { %>
        <a href="/detail/<%= teacher.docent.id %>" class="teacherLink">
          <div class="images">
            <% if(teacher.docent.data.frame !== null){ %>
            <img
              class="frame"
              src="/images/frames/<%- teacher.docent.data.frame%>.png"
            />
            <% } %>
            <img class="teacher" src="<%- teacher.docent.data.foto.url %>" />
          </div>
          <h3>
            <%- ctx.prismicH.asText(teacher.docent.data.naam) %> <%-
            ctx.prismicH.asText(teacher.docent.data.achternaam) %>
          </h3>
        </a>
        <% }) %>
      </section>
    </main>
    <footer></footer>
  </body>
</html>
